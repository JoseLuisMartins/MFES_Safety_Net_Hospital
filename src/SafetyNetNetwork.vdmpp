			safetyNet.addAppointment(new Appointment(mk_Utils`Date(2018,1,1,8,30),hos2.getId(), doc3.getId(),pat2.getId()));
			safetyNet.addAppointment(new Appointment(mk_Utils`Date(2018,1,1,9,00),hos2.getId(), doc3.getId(),pat2.getId()));
			
