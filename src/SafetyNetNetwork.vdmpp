			dcl doc1: Doctor := new Doctor("Jose", 26, <ORTOPEDIA>);
			dcl doc2: Doctor := new Doctor("Susana", 25, <CARDIOLOGIA>);
			dcl doc3: Doctor := new Doctor("Marcelo", 38, <ORTOPEDIA>);
			
